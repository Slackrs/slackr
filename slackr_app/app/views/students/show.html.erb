<!--  NAVIGATION -->
<% if @current_user.student?  %>
	<script type="text/javascript">
		$('#student-history').addClass('ghosted')
		$('#student-history').prop('disabled', true)
	</script>
<% elsif @current_user.instructor? %>
	<script type="text/javascript">
		$('#student-history').addClass('ghosted')
		$('#student-history').prop('disabled', true)
	</script>
<% end %>

<!-- MAIN CONTENT -->
<%= render "/students/studenttotals" %>
<br>
<% if @attendances != [] %>
	<%= render "/students/studenthistory" %>
<% else %>
	<p><%= @student.name %> has been present for all class days<p> 
<% end %>


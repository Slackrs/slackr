Hello <%= @current_user.type %>, name of <%= @current_user.name %>

<% if @current_user.student?  %>
	<%= render 'navs/student/students' %>
	<script type="text/javascript">
		$('#student-history').addClass('ghosted')
		$('#student-history').prop('disabled', true)
	</script>
<% elsif @current_user.instructor? %>
	<%= render 'navs/instructor' %>
	<script type="text/javascript">
		$('#student-history').addClass('ghosted')
		$('#student-history').prop('disabled', true)
	</script>
<% end %>

<%= render "/students/studenttotals" %>
<br>
<% if @attendances != [] %>
	<%= render "/students/studenthistory" %>
<% else %>
	<p><%= @student.name %> has been present for all class days, from cohort start to today<p> 
<% end %>


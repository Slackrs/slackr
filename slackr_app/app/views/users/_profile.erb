<div class="pro-pic">
	<%= link_to user do %>
		<%= image_tag gravatar_url(user.email, size) %>
		<%= user.name %>
	<% end %>
</div>

<div>
	<%= form.label :name %><br>
	<%= form.text_field :name %>
</div>

<div>
	<%= form.label :email %><br>
	<%= form.text_field :email %>
</div>

<div>
	<%= form.label :phone_num %><br>
	<%= form.text_field :phone_num %>
</div>